<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="us.puter.park.repository.dao.MenuDao">

	<!-- 메뉴 목록 갯수 -->
	<select id="getMenuListCount" resultType="int" parameterType="Menu">
		SELECT COUNT(menuUid)
		FROM menu
		WHERE useFlag = #{useFlag}
	</select>

	<!-- 메뉴 목록 -->
	<select id="getMenuList" resultType="Menu">
		SELECT menuUid, name, mode, uri, icon
		FROM menu
	</select>

</mapper>